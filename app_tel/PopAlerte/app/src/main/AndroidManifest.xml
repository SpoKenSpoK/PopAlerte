<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yorokobii.popalerte">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Accueil"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Consignes"
            android:label="@string/title_activity_consignes"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName="com.example.yorokobii.popalerte.Accueil">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.yorokobii.popalerte.Accueil" />
        </activity>

        <activity
            android:name=".Indications"
            android:label="@string/title_activity_indications"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName="com.example.yorokobii.popalerte.Accueil">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.yorokobii.popalerte.Accueil" />
        </activity>


    </application>

</manifest>
